---
import ArrowIcon from "./icons/arrow-icon.astro";
const color = Astro.props.color || "var(--color-secondary)";
const href = Astro.props.href || "#";
---

<a href={href} class='size-fit bg-primary rounded-full p-2 -rotate-45 cursor-pointer hover:opacity-50 hover:scale-90 transition-all duration-300 ease-out'>
  <ArrowIcon color={color} />
</a>
